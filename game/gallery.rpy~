init:
    # these variables are used for the mini-gallery feature, and should only be removed if that is deleted first. Ad8~ are variables associated with each specific image, and d8total is the maximum number of images.
    $ Ad8 = Bd8 = Cd8 = Dd8 = Ed8 = Fd8 = Gd8 = Hd8 = False
    $ d8total = 8
    
# The script of the game goes in this file.
label makegal: 
    if (usegallery == True):
        $ cork = Gallery()
        
        $ cork.button("A")
        $ cork.condition("Ad8")
        $ cork.image("UI/UI home photos big 1 idle.png")
        
        $ cork.button("B")
        $ cork.condition("Bd8")
        $ cork.image("UI/UI home photos big 1 idle.png")
        
        $ cork.button("C")
        $ cork.condition("Cd8")
        $ cork.image("UI/UI home photos big 1 idle.png")
        
        $ cork.button("D")
        $ cork.condition("Dd8")
        $ cork.image("UI/UI home photos big 1 idle.png")
        
        $ cork.button("E")
        $ cork.condition("Ed8")
        $ cork.image("UI/UI home photos big 1 idle.png")
        
        $ cork.button("F")
        $ cork.condition("Fd8")
        $ cork.image("UI/UI home photos big 1 idle.png")
        
        $ cork.button("G")
        $ cork.condition("Gd8")
        $ cork.image("UI/UI home photos big 1 idle.png")
        
        $ cork.button("H")
        $ cork.condition("Hd8")
        $ cork.image("UI/UI home photos big 1 idle.png")
    
    return
